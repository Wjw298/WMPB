<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.guet.weapp.mapper.SysAddressMapper">
    <insert id="insertAddress">
        insert into sys_address(`address_id`, `address_openId`, `address_address`, `address_label`, `address_nickname`,
                                `address_phone`)
            VALUE (#{address_id},#{address_openId},#{address_address},#{address_label},#{address_nickname},#{address_phone})
    </insert>
    <update id="updateAddress">
        UPDATE sys_address
        SET address_address=#{address_address},
            address_label=#{address_label},
            address_nickname=#{address_nickname},
            address_phone=#{address_phone}
        WHERE address_openId = #{address_openId}
          AND address_id = #{address_id};
    </update>
    <delete id="deleteAddress">
        DELETE
        FROM sys_address
        WHERE address_id = #{address_id}
          AND address_openId = #{address_openId};
    </delete>
    <select id="findAllAddress" resultType="cn.edu.guet.weapp.bean.SysAddress">
        SELECT *
        FROM sys_address
        WHERE address_openId = #{value}
    </select>
</mapper>